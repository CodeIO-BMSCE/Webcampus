{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "API_BASE_URL"
      ]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "outputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:nuke": {
      "cache": false
    },
    "format:check": {
      "cache": false,
      "outputs": []
    },
    "format:write": {
      "cache": false,
      "outputs": []
    },
    "bootstrap": {
      "cache": false,
      "outputs": []
    },
    "auth:generate": {
      "cache": false
    },
    "dev:test": {
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "dev:test:ui": {
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "e2e:test": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "dx": {
      "cache": false
    }
  }
}
