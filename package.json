{
  "name": "webcampus",
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@types/figlet": "^1.7.0",
    "chalk": "^5.4.1",
    "eslint": "^9.30.1",
    "eslint-plugin-playwright": "^2.2.0",
    "figlet": "^1.8.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tsx": "^4.7.0",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "bun@1.2.5",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "sh scripts/dev.sh",
    "start": "turbo run start",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "check-types": "turbo run check-types",
    "bootstrap": "turbo run bootstrap",
    "prepare": "husky",
    "dx": "turbo run dx"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dayjs": "^1.11.13",
    "syncpack": "^14.0.0-alpha.18"
  }
}
